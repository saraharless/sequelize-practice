<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>users</title>
  </head>
  <body>
    <h1>Users</h1>
    <a href="/new_user">add user</a>
    {{#userskey}}
    <div class="userbox">
      <h4>{{id}}</h4>
      <h4>{{name}}</h4>
      <h4>{{email}}</h4>
      <h4>{{bio}}</h4>
    </div>
